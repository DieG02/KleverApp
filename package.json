{
  "name": "KleverApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android:dev": "cross-env ENVFILE=.env.dev npx react-native run-android --mode=devDebug --appIdSuffix=dev",
    "android:stage": "cross-env ENVFILE=.env.prod npx react-native run-android --mode=prodDebug",
    "android:prod": "cross-env ENVFILE=.env.prod npx react-native run-android --mode=prodRelease",
    "build:dev": "cd android && ./gradlew assembleDevDebug && cd ..",
    "build:stage": "cd android && ./gradlew assembleProdDebug && cd ..",
    "build:prod": "cd android && ./gradlew assembleProdRelease && cd ..",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "cloud:dev": "firebase use dev && firebase deploy --only functions",
    "cloud:proud": "firebase use prod && firebase deploy --only functions"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-firebase/app": "^23.1.1",
    "@react-native-firebase/auth": "^23.1.1",
    "@react-native-firebase/firestore": "^23.1.1",
    "@react-native-firebase/functions": "^23.1.1",
    "@react-native-google-signin/google-signin": "^15.0.0",
    "@react-native-voice/voice": "^3.1.5",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/stack": "^7.4.7",
    "i18next": "^25.4.0",
    "react": "19.1.0",
    "react-i18next": "^15.7.1",
    "react-native": "0.80.2",
    "react-native-config": "^1.5.7",
    "react-native-gesture-handler": "^2.28.0",
    "react-native-heroicons": "^4.0.0",
    "react-native-localize": "^3.5.2",
    "react-native-progress": "^5.0.1",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.15.2",
    "react-native-svg": "^15.12.1",
    "react-native-svg-transformer": "^1.5.1",
    "react-native-toast-message": "^2.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "19.1.1",
    "@react-native-community/cli-platform-android": "19.1.1",
    "@react-native-community/cli-platform-ios": "19.1.1",
    "@react-native/babel-preset": "0.80.2",
    "@react-native/codegen": "0.80.2",
    "@react-native/eslint-config": "0.80.2",
    "@react-native/gradle-plugin": "0.80.2",
    "@react-native/metro-config": "0.80.2",
    "@react-native/typescript-config": "0.80.2",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
